<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.chat</groupId>
  <artifactId>ChatMultihilo</artifactId>
  <name>ChatMultihilo</name>
  <version>1.0-SNAPSHOT</version>
  <description>Sistema Cliente-Servidor con Chat Multihilo y Bloqueo de Usuarios</description>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <source>23</source>
          <target>23</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>servidor</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>servidorMulti.ServidorMulti</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>cliente</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>clienteMulti.ClienteMulti</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.5.0</version>
        <executions>
          <execution>
            <id>servidor-jar</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>servidor</finalName>
              <transformers>
                <transformer>
                  <mainClass>servidorMulti.ServidorMulti</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
          <execution>
            <id>cliente-jar</id>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <finalName>cliente</finalName>
              <transformers>
                <transformer>
                  <mainClass>clienteMulti.ClienteMulti</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>23</maven.compiler.target>
    <maven.compiler.source>23</maven.compiler.source>
  </properties>
</project>
